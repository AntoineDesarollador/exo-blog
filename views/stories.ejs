


<main id="stories">

    <section id="stories-section">
        <h2>Toutes mes stories !</h2>

        <% for (const story of stories) {%>

            <a href="/story/<%= story.id %>">

                <article id="stories-article">       
                    <h3><%= story.storyTitle  %></h3>
                    <img src="/img/<%= story.url %>" alt="">
                    <p><%= story.content  %></p>
                    <p><em>écrit par : <%= story.alias %> le <%= story.storyDate.toLocaleDateString() %> à <%= story.storyDate.toLocaleTimeString() %></em></p>
                </article>
                
            </a>
                
        <% } %>


    </section>

</main>

